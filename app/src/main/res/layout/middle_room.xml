<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/middle_room_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/middle_room_three"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/middle_room_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/middle_room_one"
        app:layout_constraintRight_toRightOf="@id/middle_room_one"
        app:layout_constraintTop_toBottomOf="@id/middle_room_one" />

    <LinearLayout
        android:id="@+id/middle_room_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/middle_room_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/middle_room_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/middle_room_three"
        app:layout_constraintRight_toRightOf="@id/middle_room_three"
        app:layout_constraintTop_toBottomOf="@id/middle_room_three" />


</androidx.constraintlayout.widget.ConstraintLayout>