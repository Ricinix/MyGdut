<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/class_place"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_class_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_place_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dialog_class_place_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_class_place_title"
        app:layout_constraintTop_toTopOf="@id/dialog_class_place_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/class_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_class_place_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_time_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dialog_class_time_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_class_time_title"
        app:layout_constraintTop_toTopOf="@id/dialog_class_time_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_teacher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/class_teacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_class_time_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_teacher_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dialog_class_teacher_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_class_teacher_title"
        app:layout_constraintTop_toTopOf="@id/dialog_class_teacher_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_mate_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/classmate"
        app:layout_constraintBottom_toBottomOf="@id/dialog_class_mate_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_class_teacher_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_mate_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dialog_class_mate_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_class_mate_title"
        app:layout_constraintTop_toTopOf="@id/dialog_class_mate_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="?android:selectableItemBackground"
        android:text="@string/delete"
        android:padding="10dp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/dialog_class_btn_close"
        app:layout_constraintTop_toBottomOf="@id/dialog_class_mate_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_class_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="?android:selectableItemBackground"
        android:padding="10dp"
        android:text="@string/close"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/dialog_class_btn_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_class_mate_title" />

</androidx.constraintlayout.widget.ConstraintLayout>